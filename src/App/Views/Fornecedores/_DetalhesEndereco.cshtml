@model App.ViewModels.FornecedorViewModel

<div style="padding-top: 20px;">
	<div>
		<hr />
		<h4>Endereço</h4>
	</div>
	@if (Model != null)
	{
		<table class="table table-hover">
			<thead class="table-dark">
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Endereco.Logradouro)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Endereco.Numero)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Endereco.Complemento)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Endereco.Bairro)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Endereco.Cep)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Endereco.Cidade)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Endereco.Estado)
					</th>
					<th>Ações</th>
				</tr>
			</thead>

			<tr>
				<td>
					@Html.DisplayFor(model => model.Endereco.Logradouro)
				</td>
				<td>
					@Html.DisplayFor(model => model.Endereco.Numero)
				</td>
				<td>
					@Html.DisplayFor(model => model.Endereco.Complemento)
				</td>
				<td>
					@Html.DisplayFor(model => model.Endereco.Bairro)
				</td>
				<td>
					@Html.DisplayFor(model => model.Endereco.Cep)
				</td>
				<td>
					@Html.DisplayFor(model => model.Endereco.Cidade)
				</td>
				<td>
					@Html.DisplayFor(model => model.Endereco.Estado)
				</td>
				<td>
					@* Botão de editar endereço. Chama a action AtualizarEndereco da controller, essa action precisa receber o Id do fornecedor
					 * por isso declaramos o atributo asp-route-id como @Model.Id, assim a controller recebe Id direto da Model.
					 * Todos os atributos que contém data-bs- no nome são para a configuração do bootstrap.
					 * A tagHelper supress-by-action faz com que este elemento só seja exibido caso venha das actions informadas, caso contrario o
					 * elemento será suprimido, para mais detalhes consultar o arquivo Extensions/ClaimsTagHelper.cs *@
					<a supress-by-action="Edit,ObterEndereco" asp-action="AtualizarEndereco" asp-route-id="@Model.Id" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#myModal" data-bs-modal="">
						<span title="Editar" class="fa fa-pencil-alt"></span>
					</a>
				</td>
			</tr>
		</table>
	}

</div>
